
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - aot_e_security_frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
